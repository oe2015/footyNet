<!DOCTYPE html>
<html>
  <head>
    <title>FootyNet - Join a Team</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <h1>Join a Team</h1>
    <div class="teams">
      {{#each teams}}
        <div class="team">
          <h2>{{this.name}}</h2>
          <p>Captain: {{this.captain.username}}</p>
          <p>Players: {{this.players.length}}</p>
          <form method="POST" action="/teams/join">
            <input type="hidden" name="teamId" value="{{this._id}}">
            <button type="submit">Join</button>
          </form>
        </div>
      {{/each}}
    </div>
  </body>
</html>