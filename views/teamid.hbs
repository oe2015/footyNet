<!DOCTYPE html>
<html>
  <head>
    <title>FootyNet - {{team.name}}</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="team">
      <h2>Team:</h2>
      <h1>{{team.name}}</h1>
      <h2>Captain:</h2>
      <p>{{team.captain.username}}</p>
      <h2>Players:</h2>
      {{#each team.players}}
        <p>{{this.username}}</p>
      {{/each}}
      <h2>Leagues:</h2>
      <ul>
        {{#each team.leagues}}
          <li>
            <a href="/league/{{this._id}}">{{this.name}}</a>
          </li>
        {{/each}}
      </ul>
      <h2>Upcoming Matches:</h2>
      <ul>
        {{#each upcomingMatches}}
          <li>
            <h3>Date: {{this.date}}</h3>
            <p>Opponent: {{this.opponent.name}}</p>
            <p>Pitch: {{this.pitch.name}}</p>
          </li>
        {{/each}}
      </ul>
      <h2>Match History:</h2>
      <ul>
        {{#each matchHistory}}
          <li>
            <h3>Date: {{this.date}}</h3>
            <p>Opponent: {{this.opponent.name}}</p>
            <p>Pitch: {{this.pitch.name}}</p>
            <p>Score: {{this.team1.name}} {{this.team1Goals}} - {{this.team2Goals}} {{this.team2.name}}</p>
          </li>
        {{/each}}
      </ul>
    </div>
  </body>
</html>

